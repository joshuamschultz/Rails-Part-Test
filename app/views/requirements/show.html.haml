%p#notice= notice

%p
  %b Bubble:
  = @requirement.bubble
%p
  %b Dim:
  = @requirement.dim
%p
  %b Tolerance less:
  = @requirement.tolerance_less
%p
  %b Tolerance plus:
  = @requirement.tolerance_plus
%p
  %b Dim type:
  = @requirement.characteristic.name
%p
  %b Part:
  = @requirement.part.name
  
#discussions
  %b Discuss:
  = render :file => 'discussions/index'
  %br
  = simple_form_for([@requirement, Discussion.new]) do |f|

    .form-inputs
      = f.input :body
    
    .form-actions
      = f.button :submit
  
    
  

= link_to 'Edit', edit_requirement_path(@requirement)
\|
= link_to 'Back', :back



  
  